  </div>
  <div id="catchPhrase" class="container">
      <% if logged_in? %>
      <div class="row">
      <% @user = current_user %>
        <div class="col=xs-12 center">
          <h1 class="center">Hello <%= @user.username %>!</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-6 center">
