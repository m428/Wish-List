<h1>Items#edit</h1>
<p>Find me in app/views/items/edit.html.erb</p>

<section>
  <div class="container">
    <div class="col-xs-8 col-xs-offset-2">
      <h1 class="center"><%= @item.title %></h1>
      <%= form_for [@user, @item] do |p| %>
        <%= p.label :title %>
        <%= p.text_field :title, placeholder: "ITEM NAME", class:'form-control', autofocus: true %>
        <br>
        <%= p.label :category %>
        <%= p.text_field :category, placeholder: "CATEGORY", class:'form-control' %>
        <br>
        <%= p.label :cost %>
        <%= p.text_field :cost, placeholder: "COST", class:'form-control'%>
        <br>
        <%= p.label :note %>
        <%= p.text_field :note, placeholder: "NOTE", class:'form-control'%>
        <br>
        <%= p.label :seller %>
        <%= p.text_field :seller, placeholder: "SELLER", class:'form-control' %>
        <br>
        <%= p.label :link %>
        <%= p.text_field :link, placeholder: "LINK", class:'form-control' %>
        <br>

        <div class="text-right">
          <%= p.submit "UPDATE", class: 'btn btn-primary' %>
        </div>
        <% end %>

    </div>

  </div>
</section>
